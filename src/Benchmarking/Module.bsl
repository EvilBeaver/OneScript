	ФлагСценарииВыполнены             = Ложь;
	ВозниклаОшибкаПодключенияTestClient = Ложь;
	ВозниклаОшибкаВШагеКонтекста        = Ложь;

	Объект.ИдетВыполнениеСценариев    = Истина;
