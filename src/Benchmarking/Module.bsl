		Истина,ДопПараметры);
	КонецЕсли;

	ДопПараметры.Вставить("ЕстьЦиклы",Ложь);
	ДопПараметры.Вставить("МассивУсловий",Новый Массив);
	ДобавитьШагиДляВыполненияСценария(Шаги, СтрокаДерева.Строки, СтрокаДерева, СтрокаДерева, Ложь,ДопПараметры);

