	Стр = СтрЗаменить(Стр, "№", "");
	Стр = СтрЗаменить(Стр, "?", "");
	Стр = СтрЗаменить(Стр, "<", "");
	Стр = СтрЗаменить(Стр, ">", "");

	ЛевСимвол = Лев(Стр, 1);
	Если ЛевСимвол = "0"
		Или ЛевСимвол = "1"
		Или ЛевСимвол = "2"
		Или ЛевСимвол = "3"
		Или ЛевСимвол = "4"
