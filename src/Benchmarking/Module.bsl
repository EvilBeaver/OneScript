			Страница.ЗаписатьСтроку("<img src=" + СтрЗаменить(СтрСкриншотаДляHTML, "\", "/") + ">");
		КонецЦикла;
	КонецЦикла;

	Страница.ЗаписатьСтроку("</body>");
	Страница.ЗаписатьСтроку("/<html>");

